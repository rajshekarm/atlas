# Flash Service Environment Variables

# ===== Azure OpenAI =====
FLASH_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
FLASH_AZURE_OPENAI_API_KEY=your-api-key-here
FLASH_AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
FLASH_AZURE_OPENAI_API_VERSION=2024-02-01

# ===== Azure AI Search (Vector Database) =====
FLASH_AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
FLASH_AZURE_SEARCH_API_KEY=your-search-key-here
FLASH_AZURE_SEARCH_INDEX_NAME=flash-knowledge-base

# ===== Azure Blob Storage (Optional) =====
FLASH_AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
FLASH_AZURE_STORAGE_CONTAINER_NAME=resumes

# ===== Local Storage Paths =====
FLASH_LOCAL_STORAGE_PATH=./data/flash
FLASH_RESUME_STORAGE_PATH=./data/resumes
FLASH_KNOWLEDGE_BASE_PATH=./data/knowledge_base

# ===== Service Configuration =====
FLASH_MAX_RESUME_SIZE_MB=5
FLASH_MAX_ANSWER_LENGTH_WORDS=200
FLASH_CONFIDENCE_THRESHOLD_HIGH=0.8
FLASH_CONFIDENCE_THRESHOLD_MEDIUM=0.5

# ===== Guardrails =====
FLASH_ENABLE_GUARDRAILS=true
FLASH_MAX_RESUME_REWRITE_PERCENTAGE=40
